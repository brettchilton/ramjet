# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=annie_defect
DB_HOST=db

# Ory Hydra Configuration (legacy - can be removed if not using Hydra)
HYDRA_SYSTEM_SECRET=change-this-to-a-secure-random-string
HYDRA_OIDC_SALT=change-this-to-another-secure-string
HYDRA_ADMIN_URL=http://hydra:4445
HYDRA_PUBLIC_URL=http://hydra:4444
HYDRA_CLIENT_ID=annie-defect-frontend
HYDRA_CLIENT_SECRET=change-this-client-secret

# JWT Secret for Simple Auth
SECRET_KEY=dev-secret-key-change-in-production-use-something-very-secure

# Ory Kratos Configuration (only needed for production)
KRATOS_COOKIE_SECRET=change-this-to-exactly-32chars!
KRATOS_CIPHER_SECRET=another-32-char-secret-string!!!
KRATOS_WEBHOOK_SECRET=webhook-secret-for-user-sync

# Digital Ocean Spaces (Optional - for image storage)
DO_SPACES_ENDPOINT=https://syd1.digitaloceanspaces.com
DO_SPACES_BUCKET=your-bucket-name
DO_SPACES_KEY=your-access-key
DO_SPACES_SECRET=your-secret-key
DO_SPACES_REGION=syd1
DO_SPACES_EXPIRATION_SECONDS=3600

# Frontend Configuration
VITE_API_URL=http://localhost:8006
VITE_USE_SIMPLE_AUTH=true

# Development Settings
DEBUG=true
LOG_LEVEL=DEBUG

# Email Configuration (Mailgun API)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mg.yourdomain.com

# SMTP Configuration (Alternative to Mailgun)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Email Sender Settings
MAIL_FROM_EMAIL=noreply@localhost
MAIL_FROM_NAME=Annie Defect Tracking

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5179

# OpenAI Configuration (Optional - for AI features)
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=your-openai-org-id

# MCP Server Configuration
MODE=stdio
EXCEL_MCP_PORT=9100
